      "id": 1,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "pluginVersion": "9.5.3",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "expr": "sum(up{job=~\"$node\"}) / count(up{job=~\"$node\"}) * 100",
          "legendFormat": "Infrastructure Uptime %",
          "refId": "A"
        }
      ],
      "title": "Infrastructure Health",
      "type": "stat",
      "alert": {
        "name": "Infrastructure Health Critical",
        "conditions": [
          {
            "evaluator": {
              "type": "lt",
              "params": [99.9]
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": ["A", "15m", "now"]
            }
          }
        ],
        "notifications": ["slack-critical", "pagerduty-p1"]
      }
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "fieldConfig": {
        "defaults": {
