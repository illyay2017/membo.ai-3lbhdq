# Root EditorConfig file for membo.ai project
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON and YAML files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Java/Kotlin files (for potential mobile native modules)
[*.{java,kt}]
indent_style = space
indent_size = 4

# iOS native files
[*.{h,m,mm,swift}]
indent_style = space
indent_size = 4